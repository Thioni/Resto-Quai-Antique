{% extends "base.html.twig" %}

{% block title %}Ajouter une photo{% endblock %}

{% block body %}

    <div class="text-center text-light bg-danger">
      {% for flashMessage in app.session.flashbag.get('error') %}
        {{ flashMessage}}
      {% endfor %}
    </div>

    {{ form_start(form) }}

        <div class="row justify-content-center text-center mx-0 mt-5">
            <div class="row justify-content-center">
                <div class="col-12 col-lg-8 col-xl-4">
                    {{ form_row(form.path) }}                    
                </div>
            </div>
            <div class="row justify-content-center">        
                <div class="col-12 col-lg-8 col-xl-4">
                    {{ form_row(form.dish) }}
                </div>
            </div>
            <div class="row justify-content-center">
                 <div class="col-12 col-lg-8 col-xl-4">
                    {{ form_row(form.title) }}
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-12 col-lg-8 col-xl-2">
                    {{ form_row(form.selected) }}
                    <img id="photo_preview" src="{{ form.path.vars.value }}" 
                    alt="PrÃ©visualisation de la photo" width="250">
                </div>
            </div>
        </div>

        <div class="row mx-0">
            <div class="col text-center my-5">
                <input type="submit" value="Ajouter" class="btn">
            </div>
        </div>

    {{ form_end(form) }}


<script src="{{ asset('javascript/preview.js') }}"></script>

{% endblock %}