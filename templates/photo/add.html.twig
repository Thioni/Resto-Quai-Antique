{% extends "base.html.twig" %}

{% block title %}Ajouter une photo{% endblock %}

{% block body %}


    {{ form_start(form) }}

        <div class="row justify-content-center text-center mx-0 mt-5">
            <div class="row justify-content-center">        
                <div class="col-12 col-lg-8 col-xl-4">
                    {{ form_row(form.dish) }}
                </div>
            </div>

            <div class="row justify-content-center">
                 <div class="col-12 col-lg-8 col-xl-4">
                    {{ form_row(form.title) }}
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="col-12 col-lg-8 col-xl-4">
                    {{ form_row(form.path) }}
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="col-12 col-lg-8 col-xl-2">
                    {{ form_row(form.selected) }}
                </div>
            </div>
        </div>

        <div class="row mx-0">
            <div class="col text-center mt-5">
                <input type="submit" value="Ajouter" class="btn">
            </div>
        </div>

    {{ form_end(form) }}

{% endblock %}