{% extends "base.html.twig" %}

{% block title %}RÃ©server{% endblock %}

{% block body %}

    <div class="container-fluid">

        {{ form_start(form) }}

        <div class="row justify-content-center mt-5">
             <div class="col-12 col-lg-4 col-xl-2">
                 {{ form_row(form.firstname) }}
             </div>
             <div class="col-12 col-lg-4 col-xl-2">
                 {{ form_row(form.lastname) }}
             </div>
        </div>
        <div class="row justify-content-center">
                <div class="col-12 col-lg-6 col-xl-4">
                    {{ form_row(form.email) }}
                </div>
        </div>
        <div class="row justify-content-start">
                <div class="col-6 col-xl-6 align-self-end text-start
                text-lg-end">
                            {{ form_label(form.seats) }}
                </div>
                <div class="col-3 col-lg-2 col-xl-1">
                            {{ form_widget(form.seats) }}
                </div>
                <div class="col-6 col-lg-6 col-xl-6
                text-lg-end">
                            {{ form_label(form.timeslot) }}
                </div>
                <div class="col-6 col-lg-4 col-xl-2">
                            {{ form_widget(form.timeslot) }}
                </div>
        </div>
        <div class="row justify-content-end mt-2">
                <div class="col-12 col-lg-6">
                    {{ form_row(form.allergy) }}
                </div>
        </div>
        <div class="row justify-content-center">
                <div class="col-12 col-lg-6 col-xl-4">
                    {{ form_row(form.comment) }}
                </div>
        </div>

        <div class="row">
            <div class="col text-center mt-5">
                <input type="submit" value="Valider" class="btn">
            </div>  
        </div>

        {{ form_rest(form) }}
        {{ form_end(form) }}

    </div>

{% endblock %}